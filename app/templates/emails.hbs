{{#if hasError}}
  {{error}}
{{/if}}

{{outlet}}

{{#if isLoading}}
  <div class="flex items-center text-off-white h-24">
    <span class="flex-1 text-center">loading...</span>
  </div>
{{else}}
  <div class="flex justify-end px-3">
    <div class="flex flex-col justify-end px-3">
      <label class="mr-2 py-2 text-off-white">search</label>
      <input class="py-2" value={{search}} oninput={{action (perform searchTask) value="target.value"}}>
    </div>
    <div class="flex flex-col justify-end px-3">
      <label class="mr-2 py-2 text-off-white">sort</label>
      {{one-way-select sort
        class="py-2"
        options=sortOptions
        update=(action (mut sort))
      }}
    </div>
  </div>
  <div class="flex justify-end px-3">
    <span class="mr-2 py-2 text-off-white text-xs">average word count: {{averageWordCount}}</span>
  </div>

  {{#vertical-collection filteredEmails
      tagName="div"
      class="px-6"
      estimateHeight=600
      staticHeight=false
      bufferSize=1
      containerSelector="body"
      as |e i|}}
    <EmailCard
      @date={{e.date}}
      @subject={{e.subject}}
      @body={{e.body}}
      @wordCount={{e.wordCount}}
      @charCount={{e.charCount}}
      @position="{{add i 1}}/{{filteredEmails.length}}" />
  {{/vertical-collection}}
{{/if}}
